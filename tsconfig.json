{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "incremental": false,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": false,
        "removeComments": false,
        "lib": ["ES2015", "ES2016", "ES2018", "ES2019.Object", "ES2018.AsyncIterable", "ES2020.String", "ES2019.Array"],
        "rootDir": "src/",
        // "outDir": "dist/",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "pretty": true
    },
    "ts-node": {
        "moduleTypes": {
            "scripts/*": "cjs"
        }
    },
    "include": ["src/"],
    "exclude": ["node_modules", "dist", "scripts", "src/**/test"]
}

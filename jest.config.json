{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "src"],
    "extensionsToTreatAsEsm": [".ts"],
    "roots": ["<rootDir>"],
    "globals": {
        "ts-jest": {
            "useESM": true
        }
    },
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "coveragePathIgnorePatterns": ["<rootDir>/dist/", "<rootDir>/scripts/"]
}
